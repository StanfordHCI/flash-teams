<div class="container">
<meta charset="utf-8">
<h1>Flash Teams Library</h1>
 
<%= link_to 'New Flash Team', new_flash_team_path %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody> 
  <% @flash_teams.each do |flash_team| %>
    <tr>
      <td><%= flash_team.id %></td>
      <td><a class="flashteam_title" href="#" data-type="text" data-name="name" data-pk="<%= flash_team.id %>"><%= flash_team.name %></a></td>
      <!-- <td><%= flash_team.name %></td> -->
      <!-- <td><%= link_to 'Show', flash_team %></td> -->
      <td><%= link_to 'Edit', edit_flash_team_path(flash_team) %></td>
      <td><%= link_to 'Delete', flash_team_path(flash_team), :method => :delete, :confirm => 'Are you sure?' %></td>
      <td><%= link_to 'Duplicate', duplicate_flash_team_path(flash_team) %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>

<link href="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap-editable/css/bootstrap-editable.css" rel="stylesheet"/>
<script src="//cdnjs.cloudflare.com/ajax/libs/x-editable/1.5.0/bootstrap-editable/js/bootstrap-editable.min.js"></script>
<script>
  $.fn.editable.defaults.mode = 'inline';
  $(document).ready(function() {
    $('.flashteam_title').editable();
  });
</script>